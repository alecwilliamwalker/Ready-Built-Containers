generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Model {
  id          String       @id @default(cuid())
  slug        String       @unique
  name        String
  tagline     String?
  description String
  lengthFt    Int
  sleeps      Int
  hasBathroom Boolean
  hasKitchen  Boolean
  basePrice   Int
  isActive    Boolean      @default(true)
  images      ModelImage[]
  floorplans  Floorplan[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model ModelImage {
  id        String  @id @default(cuid())
  modelId   String
  url       String
  alt       String
  sortOrder Int     @default(0)
  model     Model   @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([modelId, sortOrder])
}

model Floorplan {
  id          String @id @default(cuid())
  modelId     String
  name        String
  description String?
  imageUrl    String
  isDefault   Boolean @default(false)
  model       Model   @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([modelId, isDefault])
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  state     String?
  zip       String?
  modelSlug String?
  timeline  String?
  source    String
  message   String?
  createdAt DateTime @default(now())
}

model ConsultationRequest {
  id             String   @id @default(cuid())
  name           String
  email          String
  phone          String?
  preferredModel String?
  preferredDate  DateTime?
  timeZone       String?
  notes          String?
  createdAt      DateTime @default(now())
}

model QuoteRequest {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String?
  modelSlug       String?
  landState       String?
  landZip         String?
  landDescription String?
  powerPreference String?
  waterPreference String?
  septicSituation String?
  timeline        String?
  budgetRange     String?
  message         String?
  createdAt       DateTime @default(now())
}

model Reservation {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String?
  modelSlug       String?
  amountCents     Int
  stripeSessionId String   @unique
  status          String   @default("pending")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  phone     String?
  state     String?
  zip       String?
  timeline  String?
  designs   Design[]
  createdAt DateTime @default(now())
}

model Design {
  id                String             @id @default(cuid())
  userId            String
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  name              String
  shellLengthFt     Int
  configJson        Json
  bomSelectionsJson Json?
  priceCents        Int                @default(0)
  previewImageUrl   String?
  submissions       DesignSubmission[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@index([userId, updatedAt])
}

model DesignSubmission {
  id        String   @id @default(cuid())
  designId  String
  design    Design   @relation(fields: [designId], references: [id], onDelete: Cascade)
  status    String   @default("pending")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status, createdAt])
}

model ModuleCatalog {
  id            String   @id @default(cuid())
  key           String   @unique
  name          String
  category      String
  schemaJson    Json
  priceRuleJson Json
  createdAt     DateTime @default(now())
}

